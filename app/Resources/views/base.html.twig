        <![endif]-->
    </head>
    <body>
    <!--Inicia menú-->
    <div class="container-fluid sin-padding navbar-fixed-top">
        <div class="header-control-page fondo-2 text-color-1">
            <div class="container">
                <div class="col-md-8">
                    <h2 class="sin-margin">
                        Sistema de Acreditación
                    </h2>            
                </div>
                <div class="col-md-4 text-right z-index-1">
                    <div class="btn-group">
                        <button type="button" class="btn btn-warning">
                            {% if is_granted('IS_AUTHENTICATED_FULLY') or is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                                Hola, {{ app.user.nombres }}
                            {% else %}
                                Hola
                            {% endif %}
                        </button>
                        <button type="button" class="btn btn-warning dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="caret"></span>
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('fos_user_change_password') }}">Cambiar clave</a></li>
                            <li><a href="{{ path('fos_user_security_logout') }}">Salir del sistema</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <nav class="navbar navbar-inverse navbar-static-top fondo-1 href-color-1 sin-border">
            <div class="container">
                <div class="navbar-header dispositivo-movil">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand " href="#">Menú</a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li><a href="index.php">Inicio</a></li>                            
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Usuarios <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="{{ absolute_url(asset('app_dev.php/agregar-usuario')) }}">Registrar</a></li>
                                <li><a href="{{ absolute_url(asset('app_dev.php/lista-usuarios')) }}">Mantenimiento</a></li>                              
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Centros educativos <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="#">Registrar</a></li>
                                <li><a href="#">Ver todos</a></li>                              
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Zonas<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="#">Registrar</a></li>
                                <li><a href="#">Mantenimiento</a></li>                              
                            </ul>
                        </li>
                    </ul>            
                </div><!--/.nav-collapse -->
            </div>
        </nav>
    </div>
    <!-fin menú-->
    <div class="container">
        <div class="row">
           {% block body %}{% endblock %}
        </div>
    </div>
    <div class="container">
        <div class="capa-separador-1"></div>
        <div class="col-md-12 text-right text-color-2 border-top">
            <div class="header-control-footer">
                Sistema de Acreditación <br />               
                V 1.0
            </div>
        </div>
    </div>
   {% block javascripts %}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
