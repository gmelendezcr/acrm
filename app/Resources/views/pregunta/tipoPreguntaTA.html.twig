<div class="col-md-12">
    <div class="table-responsive">
        <table class="table table-bordered table-criterio">
            <tbody>
                <tr class="bg-info">
                    <th>
                        {{ pregunta.idSeccion.codSeccion ~ '.' ~ pregunta.codPregunta ~ ' ' ~ pregunta.descripcionPregunta }}
                    </th>
                </tr>
                <tr>
                    <td>
                        {% if pregunta.opcionNoAplica %}
                            <label class="btn btn-info btn-xs">
                                <input type='checkbox' class='tipoPregunta{{ pregunta.idTipoPregunta.codTipoPregunta }}NoAplica'
                                id='{{ pregunta.idTipoPregunta.codTipoPregunta }}NoAplica_{{ pregunta.idPregunta }}'
                                name='{{ pregunta.idTipoPregunta.codTipoPregunta }}NoAplica_{{ pregunta.idPregunta }}'
                                onClick="$('#{{ id }}').prop('disabled',!$('#{{ id }}').prop('disabled')); if($(this).prop('checked')){ $('#{{ id }}').val(''); }" {{ disabled }}> {{ pregunta.opcionNoAplicaTexto }}
                            </label>
                        {% endif %}
                        <textarea class='tipoPregunta{{ pregunta.idTipoPregunta.codTipoPregunta }} form-control' id='{{ id }}' name='{{ id }}' {{ maxLength }} {{ regExp|raw }} {{ (regExp ? "onBlur=\"if(!$('#" ~ id ~ "').val().match($('#" ~ id ~ "').attr('regExp'))){ $('#" ~ id ~ "').addClass('noValido'); } else { $('#" ~ id ~ "').removeClass('noValido'); }\";" : '')|raw }} {{ readonly }}>{{ respuestas[pregunta.idPregunta] ?? null }}</textarea>
                        {{ btRevisar|raw }}
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>