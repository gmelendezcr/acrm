{% extends 'base.html.twig' %}
{% block body %}
    <div class="col-md-12">
        <div class="header-control">
            <div class="jumbotron text-center sin-margin-bottom">
                <h2>
                    Bienvenido{{ app.user and app.user.nombres ? ', ' ~ app.user.nombres : null }}
                </h2>
                <div class="clearfix"></div>
            </div>
        </div>
        <div class="clearfix capa-separador-1"></div>
    </div>
    {% if is_granted('ROLE_SUPER_ADMIN') and is_granted('ROLE_MINED') and is_granted('ROLE_DIGITADOR') and is_granted('ROLE_REVISOR') and is_granted('ROLE_EVALUADOR') %}
         {% set col = '4' %}
    {% elseif is_granted('ROLE_REVISOR') %}
        {% set col = '6' %}
    {% elseif is_granted('ROLE_EVALUADOR') %}
        {% set col = '4' %}
    {% elseif is_granted('ROLE_REVISOR') or is_granted('ROLE_EVALUADOR') %}
        {% set col = '4' %}
    {% else %}
        {% set col = '4' %}
    {% endif %}
    {% if is_granted('ROLE_REVISOR') or is_granted('ROLE_EVALUADOR') %}
        <div class="col-md-{{col}}">
            <div class="panel panel-primary">
                <div class="panel-heading">
                  <span class="label label-warning label-right">{{ num_form1 }}</span> Formularios en digitación o corrección 
               </div>
               <!--<div class="panel-body">
                   <p> </p>
               </div>-->
               <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>
                                Centros educativos
                            </th>
                            <th class="col-xs-2">
                                Acción
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {%for item in lista1 %}
                        <tr>
                            <td>
                                {{item.nbrCentroEducativo}} ({{item.codFormulario}})
                            </td>
                            <td>
                                <form id="mostrarSecciones{{ item.idFormularioPorCentroEducativo }}" action="{{ path('seccion_index') }}" method="post">
                                    <input type="hidden" name="idFormularioPorCentroEducativoRevisar" value="{{ item.idFormularioPorCentroEducativo }}">
                                </form>
                                <a href="#" onClick="$('#mostrarSecciones{{ item.idFormularioPorCentroEducativo }}').submit();" class="btn btn-info btn-block">Mostrar</a>
                            </td>
                        </tr>
                        {% endfor %}
                        {% if lista1|length == 0 %}
                            <tr>
                                <td colspan=2>
                                    Vacío
                                </td>
                            </tr>
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="col-md-{{col}}">
            <div class="panel panel-primary">
                <div class="panel-heading">
                   <span class="label label-warning label-right">{{ num_form2 }}</span> Formularios pendientes de revisar 
               </div>
               <!--<div class="panel-body">
                   <p> </p>
               </div>-->
               <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>
                                Centros educativos
                            </th>
                            <th class="col-xs-2">
                                Acción
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {%for item in lista2 %}
                        <tr>
                            <td>
                                {{item.nbrCentroEducativo}} ({{item.codFormulario}})
                            </td>
                            <td>
                                <form id="mostrarSecciones{{ item.idFormularioPorCentroEducativo }}" action="{{ path('seccion_index') }}" method="post">
                                    <input type="hidden" name="idFormularioPorCentroEducativoRevisar" value="{{ item.idFormularioPorCentroEducativo }}">
                                </form>
                                <a href="#" onClick="$('#mostrarSecciones{{ item.idFormularioPorCentroEducativo }}').submit();" class="btn btn-info btn-block">Mostrar</a>
                            </td>
                        </tr>
                        {% endfor %}
                        {% if lista2|length == 0 %}
                            <tr>
                                <td colspan=2>
                                    Vacío
                                </td>
                            </tr>
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endif %}

    {% if is_granted('ROLE_EVALUADOR') %}
        <div class="col-md-{{col}}">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <span class="label label-warning label-right">{{ num_form3 }}</span> Formularios pendientes de calificar 
               </div>
               <!--<div class="panel-body">
                   <p>Aquí encontrará los últimos 5 registros de de formularios aprobados esperando ser calificados</p>
               </div>-->
               <div class="table-responsive">
                   <table class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <th class="col-xs-10">
                                    Centros educativos
                                </th>
                                <th class="col-xs-2">
                                    Acción
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            {%for item in lista3 %}
                            <tr>
                                <td>
                                    {{item.nbrCentroEducativo}} ({{item.codFormulario}})
                                </td>
                                <td>
                                    <form id="mostrarSecciones{{ item.idFormularioPorCentroEducativo }}" action="{{ path('seccion_index') }}" method="post">
                                        <input type="hidden" name="idFormularioPorCentroEducativoRevisar" value="{{ item.idFormularioPorCentroEducativo }}">
                                    </form>
                                    <a href="#" onClick="$('#mostrarSecciones{{ item.idFormularioPorCentroEducativo }}').submit();" class="btn btn-info btn-block">Mostrar</a>
                                </td>
                            </tr>
                            {% endfor %}
                            {% if lista3|length == 0 %}
                                <tr>
                                    <td colspan=2>
                                        Vacío
                                    </td>
                                </tr>
                            {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    {% endif %}

{% endblock %}
