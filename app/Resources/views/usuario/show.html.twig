                        <td class="col-sm-10">{{ usuario.nombres }}</td>
                    </tr>
                    <tr>
                        <th class="col-sm-1">Apellidos</th>
                        <td class="col-sm-10">{{ usuario.apellidos }}</td>
                    </tr>
                    <tr>
                        <th class="col-sm-1">Correo electr√≥nico</th>
                        <td class="col-sm-10">{{ usuario.email }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="btn-group" role="group">
    
            <a class="btn btn-info" href="{{ path('usuario_index') }}"><span class="glyphicon glyphicon-triangle-left"></span> Regresar</a>
       
            <a class="btn btn-success" href="{{ path('usuario_edit', { 'id': usuario.id }) }}">Editar</a>
