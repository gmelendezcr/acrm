{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-md-12 text-center">
        <h2 class="sin-margin">
            {% block titulo %}
                Crear usuario
            {% endblock %}
        </h2>
        <div class="clearfix capa-separador-1 border-bottom"></div>
        <div class="capa-separador-1"></div>
    </div>
    <div class="col-md-12">
        <div class="header-control-general">
            <form class="form-registro form-border" method="{{ form.vars.method }}" action="{{ form.vars.action }}" onsubmit="return checkForm(this);">
                <div class="form-group">
                    {{ form_label(form.username) }}
                    {{ form_widget(form.username, {'attr': {'class': 'form-control input-3', 'placeholder': 'Digite el usuario'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.nombres) }}
                    {{ form_widget(form.nombres, {'attr': {'class': 'form-control input-1', 'placeholder': 'Digite los nombres'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.apellidos) }}
                    {{ form_widget(form.apellidos, {'attr': {'class': 'form-control input-1', 'placeholder': 'Digite los apellidos'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control input-3', 'placeholder': 'Digite el correo electr칩nico'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.password) }}
                    {{ form_widget(form.password, {'attr': {'class': 'form-control input-3', 'placeholder': 'Digite la contrase침a'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.passwordConfirmation) }}
                    {{ form_widget(form.passwordConfirmation, {'attr': {'class': 'form-control input-3', 'placeholder': 'Digite la confirmaci칩n de la contrase침a'}}) }}
                </div>
                <div class="form-group">
                    <label>
                    {{ form_label(form.enabled) }}
                    {{ form_widget(form.enabled, {'attr': {'class': ' '}}) }}
                    </label>
                </div>
                <div class="form-group">
                    {{ form_label(form.roles) }}
                    {{ form_widget(form.roles) }}
                </div>
                
                    {{ form_widget(form) }}
                    {% block guardar %}
                    <div class="btn-group" role="group">
                        <a class="btn btn-info" href="{{ path('usuario_index') }}"><span class="glyphicon glyphicon-triangle-left"></span> Regresar</a>
                        <button class="btn  btn-success" type="submit" value="Agregar"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Agregar</button>
                    </div>
                    {% endblock %}
                    {{ form_end(form) }}
                
        </div>
    </div>

    
        
            
       
        {% block eliminar %}
        {% endblock %}
    
{% endblock %}
