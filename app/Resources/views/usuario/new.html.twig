{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-md-12 text-center">
        <h2 class="sin-margin">
            {% block titulo %}
                Crear un usuario
            {% endblock %}
        </h2>
        <div class="clearfix capa-separador-1 border-bottom"></div>
        <div class="capa-separador-1"></div>
    </div>
    <div class="col-md-12">
        <div class="header-control-general">
            <form class="form-registro form-border" method="{{ form.vars.method }}" action="{{ form.vars.action }}">
                <div class="form-group">
                    {{ form_label(form.username) }}
                    {{ form_widget(form.username, {'attr': {'class': 'form-control input-3', 'placeholder': 'Digite el usuario'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.nombres) }}
                    {{ form_widget(form.nombres, {'attr': {'class': 'form-control input-3', 'placeholder': 'Digite los nombres'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.apellidos) }}
                    {{ form_widget(form.apellidos, {'attr': {'class': 'form-control input-3', 'placeholder': 'Digite los apellidos'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control input-3', 'placeholder': 'Digite el correo electr칩nico'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.password) }}
                    {{ form_widget(form.password, {'attr': {'class': 'form-control input-3', 'placeholder': 'Digite la contrase침a'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.passwordConfirmation) }}
                    {{ form_widget(form.passwordConfirmation, {'attr': {'class': 'form-control input-3', 'placeholder': 'Digite la confirmaci칩n de la contrase침a'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.enabled) }}
                    {{ form_widget(form.enabled, {'attr': {'class': 'form-control input-3'}}) }}
                </div>
                {{ form_widget(form) }}
                {% block guardar %}
                    <input type="submit" value="Agregar" />
                {% endblock %}
            {{ form_end(form) }}
        </div>
    </div>

    <ul>
        <li>
            <a href="{{ path('usuario_index') }}">Regresar</a>
        </li>
        {% block eliminar %}
        {% endblock %}
    </ul>
{% endblock %}
