{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-md-12 text-center">                                            
        <h2 class="sin-margin">
            Registrar un nuevo centro educativo
        </h2>
        <div class="clearfix capa-separador-1 border-bottom"></div>
        <div class="capa-separador-1"></div>
    </div>
    <div class="col-md-12">
        <div class="header-control-general">
            <form class="form-registro form-border" method="post" action="{{ path('centro_educativo_guardar') }}" id="form_validar">
                <div class="form-group">                                
                    <label for="codigo">Código</label>
                    <input type="text" class="form-control input-3" id="codigo" name="codigo" value="{{ codigo ?? null }}" placeholder="Digite el código">                                
                </div>
                <div class="form-group">                                
                    <label for="nombre">Nombre</label>
                    <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Digite el  nombre">                                
                </div>
                <div class="form-group">                                
                    <label for="direccion">Dirección</label>
                    <input type="text" class="form-control" id="direccion" name="direccion" placeholder="Digite la dirección">                                
                </div>
                <div class="form-group">                                
                    <label for="totol_alumnos">Total de alumnos</label>
                    <input type="text" class="form-control input-3" id="total_alumnos" name="total_alumnos"  placeholder="Digite el total de alumnos">                                
                </div>
                
                <div class="form-group">                                
                    <label for="departamentos">Municios por departamento y zona geográfica</label>
                    <select class="form-control input-3" id="municipio" name="municipio">
                        <option value="0">Seleccione uno</option>
                        {% for zona in zonas %}
                            <optgroup label="{{ zona.nbrZonaGeografica }}">
                               {% for departamento in zona.departamentos %}
                                   <optgroup label="-{{ departamento.nbrDepartamento }}">
                                       {% for municipio in departamento.municipios %}
                                            <option value="{{ municipio.IdMunicipio }}">
                                                {{ municipio.nbrMunicipio }}
                                            </option>
                                        {% endfor %}
                                    </optgroup>
                               {% endfor %}
                            </optgroup>
                        {% endfor %}
                         
                         
                    </select>                                
                </div>
                <div class="form-group">                                
                    <label for="jornadas">Jornada</label>
                    <select class="form-control input-3" id="jornada" name="jornada">
                        <option value="0">Seleccione una</option>
                        {% for jornada in jornadas %}
                        <option value="{{jornada.idJornadaCentroEducativo}}">{{ jornada.nbrJornadaCentroEducativo }}
                         {% endfor %}                             
                    </select>                                
                </div>
                <div class="form-group">                                
                    <label for="tamanno">Tamaño</label>
                    <select class="form-control input-3" id="tamanno" name="tamanno">
                        <option value="0">Seleccione uno</option>
                        {% for tamanno in tamannos %}
                        <option value="{{ tamanno.idTamannoCentroEducativo }}">{{ tamanno.nbrTamannoCentroEducativo }}
                         {% endfor %}                             
                    </select>                                
                </div>
                <div class="form-group">
                    <div class="btn-group" role="group">
                        <a class="btn btn-info" href="{{ path('centro_educativo_lista') }}">
                            <span class="glyphicon glyphicon-triangle-left"></span> 
                            Regresar
                        </a>
                    <button type="submit" class="btn btn-success btn-md"><span class="glyphicon glyphicon-floppy-disk"></span> Guardar</button>
                    </div>
                </div>
            </form>
        </div> 
    </div>
{% endblock %}
