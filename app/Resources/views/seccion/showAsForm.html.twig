{% extends 'base.html.twig' %}
    {% block body %}
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <tbody>
                        <tr>
                            <td class="col-sm-2 success"><strong>CÃ³digo:</strong> </td><td clas="col-sm-10">{{ app.session.get('codCentroEducativo') }}</td>
                        </tr>
                        <tr>
                            <td class="col-sm-2 success"><strong>Centro educativo:</strong> </td><td clas="col-sm-10">{{ app.session.get('nbrCentroEducativo') }}</td>
                        </tr>
                        <tr>
                            <td class="col-sm-2 success"><strong>Formulario:</strong> </td><td class="col-sm-10">{{ app.session.get('nbrFormulario') }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <form id="seccion{{ seccion.idSeccion }}" method="POST" action="{{ path('seccion_guardar') }}">
                <div class="col-md-2 col-md-offset-10 text-right"><a class="btn btn-info" href="{{ path('seccion_index') }}"><span class="glyphicon glyphicon-chevron-left"></span> Regresar</a></div>
                    <div class="clearfix capa-separador-1"></div>
                    {% for pregunta in seccion.preguntas %}
                        {% if not pregunta.idPreguntaPadre %}
                            {% include 'pregunta/showAsForm.html.twig' with {'pregunta': pregunta, 'respuestas': respuestas, 'ponderaciones': ponderaciones} %}
                        {% endif %}
                    {% endfor %}
                    <div class="col-md-12 text-right">
                        <input type="hidden" name="idSeccion" value="{{ seccion.idSeccion }}">
                        <input type="submit" name="Guardar" value="Guardar" class="btn btn-success">
                    </div>
            </form>
        </div>
    {% endblock %}
